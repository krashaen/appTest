.post-comments
    box-shadow 0 3px 3px rgba(128,168,177,0.79)
    background-color #fbfafa
    border-radius 20px
    opacity 0.8
    padding 15px
    margin-top 15px

    &__comment-name
        margin 0
        line-height 1.5em
        font-weight normal
        font-style italic

    &__comment-content
        margin 0
        line-height 1.4em

    &__user-email
        display flex
        justify-content flex-end
        line-height 2em
