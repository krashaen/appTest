.posts-list
    width 80%
    background-color #fff

    &__post
        margin 5%

    &__post-title
        font-size 2.16667em
        font-weight 700
        line-height 1.2
        color #4e5056
        margin 0

    &__post-description
        font 400 18px/1.6 Brandon Text, sans-serif
        color #4e5056
        margin 0

    &__send
        display inline-block 
        color #fff
        background-color #ef5350
        border-radius 5px
        font-weight bold
        margin-top 3%
        cursor pointer
        padding 15px 20px
        text-decoration none

